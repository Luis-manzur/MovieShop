<%- include("../partials/adminheader") %>
    <main class="col-md-9 col-lg-10" style="height: 100vh">
        <div class="a w-100" style="text-align: end; margin: 10px 0;">
            <a class="btn btn-sm btn-primary" href="/admin/add-movie"><svg style="margin: 0 0 3 0;" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus fa-fw" viewBox="0 0 16 16" aria-hidden="true">
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
              </svg> <span style="margin: 0;">Add Movie</span></a>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Price</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < movies.length; i++) { %>
                <tr>
                    <th scope="row"><%= movies[i]._id %></th>
                    <td><%= movies[i].name %></td>
                    <td><%= movies[i].genre %></td>
                    <td>$<%= movies[i].price %></td>
                    <td><a class="w-50 btn btn-sm btn-primary" href="/admin/edit-movie/<%= movies[i]._id %>">Edit</a><a href="/admin/delete-movie/<%= movies[i]._id %>" class=" w-50 btn btn-sm btn-danger">Delete</a></td>
                    
                    
                </tr>
                <% } %>
            </tbody>
        </table>
    </main>
    <%- include("../partials/adminfooter") %>