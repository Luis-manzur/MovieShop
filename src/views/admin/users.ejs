<%- include("../partials/adminheader") %>
    <main class="col-md-9 col-lg-10 text-center" style="height: 100vh">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < users.length; i++) { %>
                <tr>
                    <th scope="row"><%= users[i]._id %></th>
                    <td><%= users[i].email %></td>
                    <td><%= users[i].role %></td>
                    <% if (users[i].role === 'admin') { %>
                        <td><a class="w-100 btn btn-sm btn-primary" href="/admin/lose-admin/<%= users[i]._id %>">Lose admin</a></td>
                    <%} else { %>
                        <td><a class="w-100 btn btn-sm btn-primary" href="/admin/make-admin/<%= users[i]._id %>">Make admin</a></td>
                    <% } %>
                </tr>
                <% } %>
            </tbody>
        </table>
    </main>
    <%- include("../partials/adminfooter") %>